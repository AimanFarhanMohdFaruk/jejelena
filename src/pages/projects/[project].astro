---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { projects } from '../../data/projects';

export async function getStaticPaths() {
	return projects.map(project => ({
		params: { project: project.name },
		props: { project }
	}));
}

const { project } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${project.title} - ${SITE_TITLE}`} description={project.description} />
	</head>
	<body>
		<Header />
		<main>
			<nav class="breadcrumb">
				<a href="/">Home</a> / 
				<a href="/projects">Projects</a> / 
				<span>{project.title}</span>
			</nav>

			<h1>{project.title}</h1>
			<p class="project-description">{project.description}</p>
			
			<div class="project-status">
				<span class="status-badge status-{project.status.toLowerCase()}">{project.status}</span>
			</div>

			<div class="project-content">
				<section class="project-section">
					<h2>Features</h2>
					<ul class="feature-list">
						{project.features.map(feature => <li>{feature}</li>)}
					</ul>
				</section>

				<section class="project-section">
					<h2>Technology Stack</h2>
					<div class="tech-stack">
						{project.tech.map(tech => <span class="tech-tag">{tech}</span>)}
					</div>
				</section>

				<section class="project-section">
					<h2>Legal Information</h2>
					<div class="legal-links">
						<a href={`/projects/${project.name}/privacy-policy`} class="legal-link">
							ðŸ“„ Privacy Policy
						</a>
						<a href={`/projects/${project.name}/terms`} class="legal-link">
							ðŸ“‹ Terms of Service
						</a>
					</div>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.breadcrumb {
		margin-bottom: 2em;
		font-size: 0.9em;
		color: rgb(var(--gray));
	}
	
	.breadcrumb a {
		color: var(--accent);
		text-decoration: none;
	}
	
	.breadcrumb a:hover {
		text-decoration: underline;
	}
	
	.project-description {
		font-size: 1.2em;
		color: rgb(var(--gray));
		margin-bottom: 1.5em;
	}
	
	.project-status {
		margin-bottom: 2em;
	}
	
	.status-badge {
		padding: 0.5em 1em;
		border-radius: 20px;
		font-size: 0.9em;
		font-weight: bold;
		text-transform: uppercase;
	}
	
	.status-active {
		background: #d4edda;
		color: #155724;
	}
	
	.status-beta {
		background: #fff3cd;
		color: #856404;
	}
	
	.status-archived {
		background: #f8d7da;
		color: #721c24;
	}
	
	.project-content {
		display: grid;
		gap: 2em;
	}
	
	.project-section h2 {
		color: var(--accent);
		margin-bottom: 1em;
	}
	
	.feature-list {
		list-style: none;
		padding: 0;
	}
	
	.feature-list li {
		padding: 0.5em 0;
		border-bottom: 1px solid rgba(var(--gray-light), 0.5);
	}
	
	.feature-list li:before {
		content: "âœ“";
		color: var(--accent);
		font-weight: bold;
		margin-right: 0.5em;
	}
	
	.tech-stack {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5em;
	}
	
	.tech-tag {
		background: rgba(var(--accent), 0.1);
		color: var(--accent);
		padding: 0.5em 1em;
		border-radius: 20px;
		font-size: 0.9em;
		font-weight: 500;
	}
	
	.legal-links {
		display: flex;
		gap: 1em;
		flex-wrap: wrap;
	}
	
	.legal-link {
		display: inline-flex;
		align-items: center;
		padding: 1em 1.5em;
		background: rgba(var(--gray-light), 0.3);
		color: rgb(var(--gray-dark));
		text-decoration: none;
		border-radius: 8px;
		transition: all 0.2s ease;
	}
	
	.legal-link:hover {
		background: var(--accent);
		color: white;
		transform: translateY(-2px);
	}
	
	@media (max-width: 720px) {
		.legal-links {
			flex-direction: column;
		}
		
		.tech-stack {
			justify-content: center;
		}
	}
</style> 